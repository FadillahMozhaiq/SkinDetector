<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.other.detectionresult.DetectionResultFragment">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="@dimen/size_16"
        android:src="@drawable/ic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_detect_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="@string/result"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_logo" />


    <!-- black background color for progress bar-->

    <ImageView
        android:id="@+id/iv_result"
        android:layout_width="173dp"
        android:layout_height="160dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_detect_result"
        tools:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/tv_result_disese_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="Name Of Disease"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_result" />

    <ProgressBar
        android:id="@+id/Pb_result_1"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="348dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:background="#000"
        android:max="100"
        android:progress="50"
        app:layout_constraintStart_toStartOf="@+id/tv_result_disese_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_result_disese_1" />

    <TextView
        android:id="@+id/tv_result_disese_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="Name Of Disease"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/Pb_result_1"
        app:layout_constraintTop_toBottomOf="@+id/Pb_result_1" />

    <ProgressBar
        android:id="@+id/pb_result_2"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="348dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:background="#000"
        android:max="100"
        android:progress="50"
        app:layout_constraintStart_toStartOf="@+id/tv_result_disese_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_result_disese_2" />

    <TextView
        android:id="@+id/tv_result_disese_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/raleway_semibold"
        android:text="Name Of Disease"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/pb_result_2"
        app:layout_constraintTop_toBottomOf="@+id/pb_result_2" />

    <ProgressBar
        android:id="@+id/pb_result_3"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="348dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:background="#000"
        android:max="100"
        android:progress="50"
        app:layout_constraintStart_toStartOf="@+id/tv_result_disese_3"
        app:layout_constraintTop_toBottomOf="@+id/tv_result_disese_3" />

    <Button
        android:id="@+id/btn_validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/validity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pb_result_3" />

    <Button
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:text="@string/done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_validity" />




</androidx.constraintlayout.widget.ConstraintLayout>